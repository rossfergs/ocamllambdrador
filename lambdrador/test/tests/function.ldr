let add_square n =
    let square = n * n;
    n + square

println ""
println "function that makes use of internally declared variable"
println add_square 10

let some_func a b c =
    let mult n1 n2 =
        n1 * n2;
    mult a b + mult b c

println ""
println "function that has nested function declared within"
println some_func 1 2 3
